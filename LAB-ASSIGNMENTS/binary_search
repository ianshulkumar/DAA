#include<iostream>
using namespace std;
int bs(int a[],int key,int length){
    int mid,l=0,h=length-1; 
    for(int i=0;i<h;i++){ 
        mid = (l+h)/2;
        if(a[mid]==key){  
            return mid;   
        } 
        if(a[mid]>key){ 
            h = mid-1; 
        }
        else{
            l = mid+1;
        }
    }
    return -1;
}
int recursive_binary_search(int a[],int key,int l,int h){
    int mid;
    for(int i=0;i<h;i++){ 
        mid = (l+h)/2;
        if(a[mid]==key){  
            return mid;   
        } 
        if(a[mid]>key){ 
            return recursive_binary_search(a,key,l,mid-1); 
        }
        else{
            return recursive_binary_search(a,key,mid+1,h); 
        }
    } 
    return -1;
} 

int main(){
    int a[7]={1,3,8,12,18,27,80};
    // cout<<bs(a,80,0,6);
    cout<<recursive_binary_search(a,80,0,6);
//   cout<<(sizeof(a)/sizeof(int));  
    return 0;
}
